
<%= form_with(model: user_registration, local: true) do |form| %>


  <% if user_registration.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user_registration.errors.count, "error") %> prohibited this user_registration from being saved:</h2>

      <ul>
        <% user_registration.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="form-group col-xs-2">
      <%= form.label :user_name %>
    </div>
    <div class="form-group col-sm-10">
      <%= form.text_field :user_name ,class: "form-control",placeholder: "Enter User Name" %>
    </div>
 
    <div class="form-group col-xs-2">
      <%= form.label :state %>
    </div>
    <div class="form-group col-sm-10">
      <%#= form.select :state, State.all.collect { |p| [ p.state_name, p.id ] }, {:prompt => "--select State--"} ,class: "form-control"%>
      <%= form.select :state, options_for_select(states,:selected => form.object.state),{:prompt => "--select State--"},class: "form-control"  %>
    </div>
    <div class="form-group col-xs-2">
      <%= form.label :District %>
    </div>
    <div class="form-group col-sm-10">
      <%= form.select :District, options_for_select(districts, :selected => form.object.District),{:prompt => "--select Districts--"},class: "form-control"  %>
    </div>
    <div class="form-group col-xs-2">
      <%= form.label :taluka %>
    </div>
    <div class="form-group col-sm-10">
      <%= form.text_field :taluka ,class: "form-control"%>
    </div>
    <div class="form-group col-xs-2">
      <%= form.label :village %>
    </div>
    <div class="form-group col-sm-10">
      <%= form.text_field :village ,class: "form-control"%>
    </div>
    <div class="form-group col-xs-2">
      <%= form.label :address %>
    </div>
    <div class="form-group col-sm-10">
      <%= form.text_field :address ,class: "form-control"%>
    </div>
  
    <div class="form-group col-xs-2">
      <%= form.submit class: "btn btn-success"%>
    </div>
  </div>


<% end %>
